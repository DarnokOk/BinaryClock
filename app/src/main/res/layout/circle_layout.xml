<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/circle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/circle_horizontal_margin"
    android:layout_marginRight="@dimen/circle_horizontal_margin"
    android:layout_marginBottom="@dimen/circle_vertical_margin"
    android:layout_marginTop="@dimen/circle_vertical_margin">
    <dzik.binaryclock.clock.layout.SquareImageView
        android:id="@+id/circleImageView"
        android:contentDescription="@string/circle_content_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/circleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true" />
</RelativeLayout>